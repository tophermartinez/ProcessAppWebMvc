@model IEnumerable<Entity_Layer.USUARIO>
    
<style>
    table {
        width: 100%;
    }

    a {
        color: white;
    }

        a:hover {
            color: white;
            text-decoration: none;
        }

    .btn-mant {
        width: 60px;
        font-size: 10px;
        margin-top: 10px;
    }
</style>
<br />
<h3>Mantenedor de Usuarios</h3>
<hr />
<br />
@if (Session["usu"] != null)
{
    <div class="col-lg-6">
        <p class="btn btn-success btn-create">
            @Html.ActionLink("Nuevo usuario", "Insert")
        </p>
    </div>
    <br />
    <div class="table-responsive-md table-responsive-sm">
        <table class="table table-hover" id="tabla">
            <thead>
                <tr>
                    <th hidden>
                        @Html.DisplayNameFor(model => model.ID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RUT)
                    </th>
                    <th hidden>
                        @Html.DisplayNameFor(model => model.DV)
                    </th>
                    <th>
                        @*@Html.DisplayNameFor(model => model.NOMBRES)*@
                        Nombre Completo
                    </th>
                    <th hidden>
                        AP.PATERNO
                        @*@Html.DisplayNameFor(model => model.APELLIDO_PATERNO)*@
                    </th>
                    <th hidden>
                        AP.MATERNO
                        @*@Html.DisplayNameFor(model => model.APELIIDO_MATERNO)*@
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CORREO)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NUMERO)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DIRECCION)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NOMBRE_USUARIO)
                    </th>
                    <th hidden>
                        @Html.DisplayNameFor(model => model.CONTRASENA)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ID_PERFIL)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ESTADO)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EMPRESA)
                    </th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <th hidden>
                        @Html.DisplayFor(modelItem => item.ID)
                    </th>
                    <td>
                        @*@Html.DisplayFor(modelItem => item.RUT)*@
                        @(item.RUT + "-" + item.DV)
                    </td>
                    <td hidden>
                        @Html.DisplayFor(modelItem => item.DV)
                    </td>
                    <td>
                        @(item.NOMBRES + " " + item.APELLIDO_PATERNO + " " + item.APELIIDO_MATERNO)
                    </td>
                    <td hidden>
                        @Html.DisplayFor(modelItem => item.APELLIDO_PATERNO)
                    </td>
                    <td hidden>
                        @Html.DisplayFor(modelItem => item.APELIIDO_MATERNO)
                    </td>
                    <td>
                        @*@Html.DisplayFor(modelItem => item.CORREO)*@
                        <p>@item.CORREO</p>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NUMERO)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DIRECCION)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NOMBRE_USUARIO)
                    </td>
                    <td hidden>
                        @Html.DisplayFor(modelItem => item.CONTRASENA)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NOMBRE_PERFIL)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NOMBRE_ESTADO)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NOMBRE_EMPRESA)
                    </td>
                    <td>
                        @if (item.ID_PERFIL != 1)
                        {
                            <p class="btn btn-warning btn-mant">@Html.ActionLink("Editar", "Update", new { ID = item.ID })</p>
                        }

                        @*@Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ })*@
                    </td>
                    <td>
                        @if (item.ID_PERFIL != 1)
                        {
                            <p class="btn btn-danger btn-mant">@Html.ActionLink("Eliminar", "Delete", new { ID = item.ID })</p>
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
}
else
{
    <h1>Debe logearse para acceder a esta opcion, no te creas vivo ctm</h1>
}

