@{
    ViewBag.Title = "Crear Flujo";
}

<style>
        .btn-warning{
            margin-left:20px;
        }

        .select-mul {
            height: 283px !important;
        }
    }




</style>

<br />
<div class="row">
    <div class="col-lg-12 col-md-12 colsm-12">
        <h3><b>@ViewBag.Title</b></h3>
    </div>
</div>
<div class="row">
    <form id="mant_crear_usuario_form">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <label>Nombre</label>
                        <input type="text" class="form-control" placeholder="Flujo Número 1" required />
                    </div>
                    <div class="col-lg-12 col-md-6 col-sm-1">
                        <label>Tarea</label>
                        <div class="input-group">
                            <select class="form-control">
                                <option>Seleccione...</option>
                            </select>
                            <button class="btn btn-warning">+</button>
                        </div>

                    </div>
                    <div class="col-lg-12 col-md-6 col-sm-1">
                        <label>Tarea Subordinada</label>
                        <div class="input-group">
                            <select class="form-control">
                                <option>Seleccione...</option>
                            </select>
                            <button class="btn btn-warning">+</button>
                        </div>

                    </div>
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <label>Flujo</label>
                        <textarea class="form-control" placeholder="Ingrese tareas..." readonly></textarea>
                    </div>

                </div>
                <br />
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <button type="reset" class="btn btn-info">Limpiar</button>
                        <button type="submit" class="btn btn-success">Crear</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <h4><b>Lista de Flujos</b></h4>
                    <select class="form-control select-mul" multiple></select>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <button type="reset" class="btn btn-danger btn-eliminar">Eliminar</button>
                </div>
            </div>
        </div>
    </div>
</div>