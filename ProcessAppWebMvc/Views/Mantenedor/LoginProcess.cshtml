 @model Entity_Layer.USUARIO
@{
    ViewBag.Title = "Login";
}
<br />
<div class="row">
    <div class="col-lg-12 col-md-12 colsm-12">
        <h3><b>@ViewBag.Title</b></h3>
    </div>
</div>
<div class="row">
    <form id="mant_conexion" method="post" action="@Url.Action("LoginPost", "Mantenedor")">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <label>Usuario</label>
                        <input name="usu" type="text" required class="form-control" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <label>Pass</label>
                        <input name="pass" type="password" required class="form-control" />
                    </div>
                </div>
                @*<div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <label>Rol</label>
                <input name="Rol" type="number" required class="form-control" />
            </div>
        </div>*@
                <br />
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <button type="reset" class="btn btn-info">Limpiar</button>
                        <button type="submit" class="btn btn-success">Ingresar</button>
                    </div>
                </div>
                <br />
                @if (@ViewBag.error != null)
                {
                    <div class="alert alert-danger" role="alert">
                        @ViewBag.error
                    </div>
                }
            </div>

        </div>
    </form>

</div>
