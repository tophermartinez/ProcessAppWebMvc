@model IEnumerable<Entity_Layer.TAREA>

@{
    ViewBag.Title = "Read";
}
<style>
    a {
        color: white;
    }

        a:hover {
            color: white;
            text-decoration: none;
        }

    .btn-mant {
        width: 60px;
        font-size: 10px;
    }
</style>
<br />
<h3>Mantenedor de Tareas</h3>
<hr />
<br />
@if (Session["perfil"] != null)
{
    if (Convert.ToInt32(Session["perfil"]) == 3)
    {
        <div class="col-lg-6">
            <p class="btn btn-success btn-create">
                @Html.ActionLink("Nueva tarea", "Insert")
            </p>
        </div>
    }
    <br />
    <div class="table-responsive-sm table-responsive-md">
        <table class="table table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.IDTAREA)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NOMBRETAREA)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FECHACREACION)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ESTADO_TAREA)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FechaEstimada)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FECHA_TERMINO)
                </th>
                <th hidden>
                    @Html.DisplayNameFor(model => model.RUT_USU)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.nombre_usuario)
                </th>
                <th></th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IDTAREA)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NOMBRETAREA)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FECHACREACION)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ESTADO_TAREA)
            </td>
            <td>
                @if (item.FechaEstimada != null)
                {
                    @Html.DisplayFor(modelItem => item.FechaEstimada)
                }
                else
                {
                    @Html.DisplayFor(modelItem => "")
                }

            </td>
            <td>
                @if (item.FECHA_TERMINO != null)
                {
                    @Html.DisplayFor(modelItem => item.FECHA_TERMINO)
                }
                else
                {
                    @Html.DisplayFor(modelItem => "")
                }

            </td>
            <td hidden>
                @Html.DisplayFor(modelItem => item.RUT_USU)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombre_usuario)
            </td>

            <td>
                <p class="btn btn-warning btn-mant"> @Html.ActionLink("Editar", "Update", new { IDTAREA = item.IDTAREA })</p>
            </td>
            <td>
                <p class="btn btn-danger btn-mant">  @Html.ActionLink("Eliminar", "Delete", new { IDTAREA = item.IDTAREA })</p>

            </td>
        </tr>
            }
        </table>
    </div>
}
else
{

    <h1>Debe logearse para acceder a esta opcion, no te creas vivo ctm</h1>

    @Html.ActionLink("Volver a Home", "Login")
}

